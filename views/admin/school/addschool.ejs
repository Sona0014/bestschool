<%- include('../header.ejs') %>
    <%- include('../sidebar.ejs') %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Display School List</h3>
                    <button data-toggle="modal" data-target="#modal-default" class="btn btn-success"
                        style="float: right;">Add School</button>
                </div>
                    
                <!-- /.card-header -->
                <div class="card-body">
                    <% if(message.length >0){ %>
                        <div class="alert alert-success">
                            <%= message %>
                        </div>
                    <% } %>
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Category</th>
                                <th>Phone</th>
                                <th>Image</th>
                                <th>Action</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <% i =1 %>
                            <% d.forEach((item)=>{ %>
                                <tr>
                                    <td><%= i++ %></td>
                                    <td><%= item.name %></td>
                                    <td><%= item.address %></td>
                                    <td><%= item.phone %></td>
                                    <td><%= item.category %></td>
                                    <td>
                                      <img src="<%= item.image.url %>" alt="" width="100" style="border-radius: 50px;">                                    </td>
                                    <td>
                                        <a href="/admin/schoolView/<%= item._id %>" class="btn btn-success">View</a>
                                        <a href="/admin/schoolEdit/<%= item._id %>" class="btn btn-info">Edit</a>
                                        <a href="/admin/schooldelete/<%= item._id %>" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>

                            <% })%>


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Rendering engine</th>
                                <th>Browser</th>
                                <th>Platform(s)</th>
                                <th>Engine version</th>
                                <th>CSS grade</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->


                <!-- modal start add school -->
                <div class="modal fade" id="modal-default">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Add School</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form action="/admin/insertschool" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" name="name" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Address</label>
                                    <textarea name="address" class="form-control"></textarea>

                                    </div>
                                    <div class="form-group">
                                        <label>Des</label>
                                       <textarea name="des" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>AffiliatedBoard</label>
                                        <input type="text" name="affiliatedBoard" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label>InstructionMedium</label>
                                        <input type="text" name="instructionMedium" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Phone Number</label>
                                        <input type="text" name="phone" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label>category</label>
                                       <select name="category" class="form-control">
                                         <option value="">select category</option>
                                         <% c.forEach((item)=>{ %>
                                         <option value="<%= item.name %>"><%= item.name %></option>
                                        <% }) %>
                                       </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Image</label>
                                        <input type="file" name="image" class="form-control" required>
                                    </div>


                                    <button class="btn btn-success">Submit</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal end -->
            </div>
            <!-- /.card -->



        </div>
        <!-- /.content-wrapper -->


        <%- include('../footer.ejs') %>