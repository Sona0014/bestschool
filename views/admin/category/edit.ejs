<%- include('../header.ejs') %>
    <%- include('../sidebar.ejs') %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Edit category</h3>
                   
                </div>
                <!-- /.card-header -->
                <div class="card-body mx-auto", style="width: 500px;">
                    <form action="/admin/categoryupdate/<%= d._id %>" method="post">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" value="<%= d.name %>" name="name" class="form-control" required>
                        </div>


                        <button class="btn btn-success">Update</button>
                    </form>
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input type="file" name="image" class="form-control" required>
                </div>
                <img src="<%= d.image.url %>" width="100" style="border-radius: 50px;">
                <br><br>
                <!-- /.card-body -->
                                    

               
            </div>
            <!-- /.card -->



        </div>
        <!-- /.content-wrapper -->


        <%- include('../footer.ejs') %>